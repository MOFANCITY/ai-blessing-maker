/* 页面容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.nav-back {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 30rpx;
  background: #f0f0f0;
  text-decoration: none;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000000;
}

.nav-placeholder {
  width: 100rpx; /* 用于平衡布局 */
}

/* 内容卡片 */
.content-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(107, 142, 35, 0.1);
  box-sizing: border-box;
  width: 100%;
}

.content-card:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.12), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.3);
}

/* 祝福语内容 */
.blessing-content {
  font-size: 40rpx;
  line-height: 1.8;
  color: #000000;
  padding: 40rpx;
  background: #FFFFFF;
  border: 3rpx solid #CCCCCC;
  border-radius: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  animation: contentReveal 0.8s ease 0.3s both;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  font-family: 'Source Han Serif SC', 'KaiTi', '楷体', serif;
  text-align: center;
  flex: 1;
  margin-bottom: 30rpx;
}

.blessing-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
  animation: shimmer 1.5s ease-in-out 1s;
}

.blessing-content::after {
  content: '';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(-45deg, transparent 6rpx, rgba(160, 82, 45, 0.3) 6rpx, rgba(160, 82, 45, 0.3) 8rpx, transparent 8rpx);
  border-radius: 2rpx;
}

@keyframes contentReveal {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: auto;
}

.action-btn {
  padding: 30rpx 45rpx;
  border: 3rpx solid #006400;
  border-radius: 30rpx;
  background: #FFFFFF;
  color: #006400;
  font-size: 36rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  min-height: 120rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  background: #6B8E23;
  color: white;
  transform: scale(1.03);
  animation: buttonVibrate 0.3s ease-in-out;
}

@keyframes buttonVibrate {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

/* 复制成功提示 */
.copy-success {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #d4edda;
  border: 2rpx solid #c3e6cb;
  border-radius: 10rpx;
  color: #155724;
  text-align: center;
  font-size: 28rpx;
  animation: copySuccessBounce 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  transform: scale(1);
}

.copy-success.fade-out {
  animation: copySuccessFadeOut 0.5s ease-out forwards;
}

@keyframes copySuccessBounce {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes copySuccessFadeOut {
  from {
    opacity: 1;
    transform: scale(1);
  }
  to {
    opacity: 0;
    transform: scale(0.95);
  }
}

/* 长按菜单样式 */
.long-press-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease-out;
}

.long-press-menu {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  min-width: 300rpx;
  animation: menuSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(107, 142, 35, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  font-size: 28rpx;
  color: #5A5A5A;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(107, 142, 35, 0.1);
  transform: scale(0.98);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes menuSlideIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 信封飞出动画 */
.envelope-fly {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  z-index: 1001;
  animation: envelopeFly 1.5s ease-out forwards;
  pointer-events: none;
}

@keyframes envelopeFly {
  0% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.2) rotate(10deg);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.5) rotate(-20deg) translateX(200rpx) translateY(-200rpx);
  }
}

/* 无障碍支持 */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 10rpx;
  }

  .nav-bar {
    padding: 15rpx;
  }

  .nav-title {
    font-size: 32rpx;
  }

  .back-text {
    font-size: 24rpx;
  }

  .content-card {
    padding: 20rpx;
  }

  .blessing-content {
    font-size: 36rpx;
    padding: 30rpx;
  }

  .action-buttons {
    flex-direction: column;
    align-items: stretch;
  }

  .action-btn {
    min-width: auto;
    width: 100%;
    margin-bottom: 15rpx;
  }
}