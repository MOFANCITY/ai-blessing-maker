/* È°µÈù¢ÂÆπÂô® */
.container {
  padding: 20rpx;
  padding-bottom: 60rpx;
  min-height: 120vh;
  background: linear-gradient(135deg, #FFDAB9 0%, #F8F0E3 100%);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  justify-content: space-between;
}

/* ‰∏âÊÆµÂºèÂ∏ÉÂ±Ä */
.guide-section {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}

.guide-text {
  font-size: 32rpx;
  color: #3D3D3D;
  font-family: 'Source Han Serif SC', 'KaiTi', 'Ê•∑‰Ωì', serif;
  margin-bottom: 15rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.guide-subtitle {
  font-size: 26rpx;
  color: #5A5A5A;
  line-height: 1.4;
}

.form-section {
  flex: 1;
  max-height: 66vh;
  overflow-y: auto;
}

.result-section {
  margin-top: auto;
  padding-top: 20rpx;
}

/* Âç°ÁâáÊ†∑Âºè */
.card-primary {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(107, 142, 35, 0.1);
}

.card-primary:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.12), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.3);
}

.card-secondary {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(107, 142, 35, 0.1);
}

.card-secondary:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.12), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.3);
}

/* Ë£ÖÈ•∞ÂÖÉÁ¥† */
.decoration-tr {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(45deg, #C79E6F, #A0522D);
  border-radius: 50%;
  opacity: 0.2;
}

/* Ê†áÈ¢òÊ†∑Âºè */
.title {
  font-size: 36rpx;
  font-weight: normal;
  margin-bottom: 30rpx;
  color: #3D3D3D;
  font-family: 'Source Han Serif SC', 'KaiTi', 'Ê•∑‰Ωì', serif;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.festive-title {
  color: #3D3D3D;
  font-family: 'Source Han Serif SC', 'KaiTi', 'Ê•∑‰Ωì', serif;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Ê®°ÂºèÈÄâÊã©Âô® */
.mode-selector {
  margin-bottom: 40rpx;
}

.mode-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.btn-mode {
  padding: 20rpx 30rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 200rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.btn-mode-inactive {
  background: rgba(248, 240, 227, 0.8);
  color: #5A5A5A;
  border: 1rpx solid rgba(107, 142, 35, 0.2);
}

.btn-mode-active {
  color: white;
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15), inset 0 1rpx 2rpx rgba(255, 255, 255, 0.2);
}

.btn-template-active {
  background: linear-gradient(to right, #6B8E23, #A0522D);
}

.btn-smart-active {
  background: linear-gradient(to right, #A0522D, #6B8E23);
}

/* Ë°®ÂçïÂÜÖÂÆπ */
.form-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.mode-content {
  flex: 1;
  animation: modeSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modeSlideIn {
  from {
    opacity: 0;
    transform: translateX(30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ËæìÂÖ•ÁªÑ */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.textarea-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx dashed rgba(107, 142, 35, 0.3);
  border-radius: 15rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #FEFEFE 0%, #F8F8F8 100%);
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: scale(1);
  position: relative;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.textarea-input::before {
  content: '';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 30rpx;
  height: 30rpx;
  background: linear-gradient(-45deg, transparent 10rpx, rgba(160, 82, 45, 0.2) 10rpx, rgba(160, 82, 45, 0.2) 12rpx, transparent 12rpx);
  border-radius: 2rpx;
}

.textarea-input:focus {
  border-color: rgba(107, 142, 35, 0.5);
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(107, 142, 35, 0.1), inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transform: scale(1.02);
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
}

.picker-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx dashed rgba(107, 142, 35, 0.3);
  border-radius: 15rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #FEFEFE 0%, #F8F8F8 100%);
  box-sizing: border-box;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.picker-input::after {
  content: 'üìù';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(160, 82, 45, 0.6);
  font-size: 24rpx;
  transition: transform 0.3s ease;
  pointer-events: none;
}

.picker-input:hover {
  border-color: rgba(107, 142, 35, 0.5);
  box-shadow: 0 0 0 2rpx rgba(107, 142, 35, 0.1), inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transform: translateY(-1rpx);
}

.picker-input.placeholder {
  color: #999;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* ÁîüÊàêÊåâÈíÆÂÆπÂô® */
.generate-button-container {
  margin-top: auto;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.btn-generate {
  width: 100%;
  padding: 30rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background: linear-gradient(45deg, #6B8E23, #A0522D);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-generate.loading {
  animation: buttonPulse 1.5s ease-in-out infinite;
}

.btn-generate:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  background: linear-gradient(45deg, #888, #666);
}

.btn-generate:not(:disabled):active {
  transform: scale(1.03);
  animation: buttonVibrate 0.3s ease-in-out;
}

@keyframes buttonPulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.3);
  }
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

/* Âä†ËΩΩÂä®Áîª */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ÁªìÊûúÂå∫Âüü */
.result-section {
  margin-top: 30rpx;
}

.error-container {
  background: #fee;
  border: 2rpx solid #fcc;
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  animation: errorSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateX(0);
}

@keyframes errorSlideIn {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.error-message {
  color: #c33;
  font-size: 28rpx;
}

.result-container {
  animation: resultSlideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes resultSlideIn {
  from {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
  gap: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 15rpx 25rpx;
  border: 2rpx solid rgba(107, 142, 35, 0.5);
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #6B8E23;
  font-size: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.action-btn:active {
  background: #6B8E23;
  color: white;
  transform: scale(1.03);
  animation: buttonVibrate 0.3s ease-in-out;
}

.blessing-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #5A5A5A;
  padding: 30rpx;
  background: linear-gradient(135deg, #FEFEFE 0%, #F8F8F8 100%);
  border: 2rpx dashed rgba(199, 158, 111, 0.4);
  border-radius: 15rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  animation: contentReveal 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
  position: relative;
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  font-family: 'Source Han Serif SC', 'KaiTi', 'Ê•∑‰Ωì', serif;
  text-align: center;
}

.blessing-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
  animation: shimmer 1.5s ease-in-out 1s;
}

.blessing-content::after {
  content: '';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(-45deg, transparent 6rpx, rgba(160, 82, 45, 0.3) 6rpx, rgba(160, 82, 45, 0.3) 8rpx, transparent 8rpx);
  border-radius: 2rpx;
}

@keyframes contentReveal {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.copy-success {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #d4edda;
  border: 2rpx solid #c3e6cb;
  border-radius: 10rpx;
  color: #155724;
  text-align: center;
  font-size: 28rpx;
  animation: copySuccessBounce 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  transform: scale(1);
}

.copy-success.fade-out {
  animation: copySuccessFadeOut 0.5s ease-out forwards;
}

@keyframes copySuccessBounce {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes copySuccessFadeOut {
  from {
    opacity: 1;
    transform: scale(1);
  }
  to {
    opacity: 0;
    transform: scale(0.95);
  }
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
}

/* Êó†ÈöúÁ¢çÊîØÊåÅ */
.sr-only {
  position: absolute;
  width: 1rpx;
  height: 1rpx;
  padding: 0;
  margin: -1rpx;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Ë°®ÂçïÈ™åËØÅÂèçÈ¶àÂä®Áîª */
.form-error {
  animation: formShake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97);
}

@keyframes formShake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-5rpx); }
  20%, 40%, 60%, 80% { transform: translateX(5rpx); }
}

/* ÊàêÂäüÊèê‰∫§ÂèçÈ¶à */
.form-success {
  animation: formSuccessGlow 0.6s ease-out;
}

@keyframes formSuccessGlow {
  0% {
    box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
  }
  50% {
    box-shadow: 0 0 0 10rpx rgba(102, 126, 234, 0.2);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(102, 126, 234, 0);
  }
}

/* ÈïøÊåâËèúÂçïÊ†∑Âºè */
.long-press-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease-out;
}

.long-press-menu {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  min-width: 300rpx;
  animation: menuSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(107, 142, 35, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  font-size: 28rpx;
  color: #5A5A5A;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(107, 142, 35, 0.1);
  transform: scale(0.98);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes menuSlideIn {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* ‰ø°Â∞ÅÈ£ûÂá∫Âä®Áîª */
.envelope-fly {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  z-index: 1001;
  animation: envelopeFly 1.5s ease-out forwards;
  pointer-events: none;
}

@keyframes envelopeFly {
  0% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.2) rotate(10deg);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.5) rotate(-20deg) translateX(200rpx) translateY(-200rpx);
  }
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 768px) {
  .container {
    padding: 20rpx 10rpx;
  }

  .guide-text {
    font-size: 28rpx;
  }

  .guide-subtitle {
    font-size: 24rpx;
  }

  .card-primary {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .mode-buttons {
    gap: 10rpx;
  }

  .btn-mode {
    padding: 15rpx 20rpx;
    font-size: 24rpx;
    min-width: 150rpx;
  }

  .result-header {
    flex-direction: column;
    align-items: stretch;
  }

  .result-actions {
    justify-content: center;
  }
}