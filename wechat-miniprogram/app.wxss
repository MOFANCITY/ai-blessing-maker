/* 全局样式文件 */

/* 重置样式 */
page {
  background: linear-gradient(135deg, #FFDAB9 0%, #F8F0E3 100%);
  min-height: 100vh;
  font-family: 'Source Han Sans SC', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', sans-serif;
}

/* 通用工具类 */
.text-center {
  text-align: center;
}

.mb-6 {
  margin-bottom: 30rpx;
}

/* 按钮基础样式 */
button {
  border-radius: 12rpx;
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
  pointer-events: none;
}

button:active::before {
  width: 300rpx;
  height: 300rpx;
}

button:active {
  transform: scale(1.03);
  transition-duration: 0.1s;
  animation: buttonVibrate 0.3s ease-in-out;
}

@keyframes buttonVibrate {
  0%, 100% { transform: scale(1.03) translateX(0); }
  25% { transform: scale(1.03) translateX(-1rpx); }
  75% { transform: scale(1.03) translateX(1rpx); }
}

button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

button:disabled::before {
  display: none;
}

/* 文本样式 */
.festive-title {
  font-family: 'Source Han Serif SC', 'KaiTi', '楷体', serif;
  font-weight: normal;
  color: #3D3D3D;
  font-size: 20px;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 卡片样式 */
.card-primary {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(107, 142, 35, 0.1);
}

.card-secondary {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08), inset 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
  position: relative;
  border: 1rpx solid rgba(107, 142, 35, 0.1);
}

/* 装饰元素 */
.decoration-tr {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(45deg, #C79E6F, #A0522D);
  border-radius: 50%;
  opacity: 0.2;
}

/* 模式按钮样式 */
.btn-mode {
  padding: 20rpx 30rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 200rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-mode-inactive {
  background: rgba(248, 240, 227, 0.8);
  color: #5A5A5A;
  border: 1rpx solid rgba(107, 142, 35, 0.2);
}

.btn-mode-active {
  color: white;
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15), inset 0 1rpx 2rpx rgba(255, 255, 255, 0.2);
}

/* 生成按钮样式 */
.btn-generate {
  width: 100%;
  padding: 30rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background: linear-gradient(45deg, #6B8E23, #A0522D);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.btn-generate:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  background: linear-gradient(45deg, #888, #666);
}

.btn-generate:not(:disabled):active {
  transform: scale(1.03);
  animation: buttonVibrate 0.3s ease-in-out;
}

/* 加载动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 20rpx 10rpx;
  }

  .card-primary,
  .card-secondary {
    padding: 20rpx;
    margin-bottom: 20rpx;
  }

  .mode-buttons {
    gap: 10rpx;
  }

  .btn-mode {
    padding: 15rpx 20rpx;
    font-size: 24rpx;
    min-width: 150rpx;
  }

  .result-header {
    flex-direction: column;
    align-items: stretch;
  }

  .result-actions {
    justify-content: center;
  }
}